<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <title>Productos</title>
</head>

<body>

  <table class="table table-bordered table-striped text-center mt-4">
    <thead>
      <tr class="bg-primary text-white">
        <th scope="col">ID</th>
        <th scope="col">Producto</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Precio</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach((user)=>{ %>
        <tr>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= user.producto %>
          </td>
          <td>
            <%= user.cantidad %>
          </td>
          <td>
            <%= user.precio %>
          </td>
          <td>
            <form action="/deleteproducto/<%= user.id %>/?accessToken=<%= token %>" method="POST">
              <button type="submit">Eliminar</button>
            </form>
            <form action="/edit/" method="GET">
              <input type="hidden" name="tipo" value="productos">
              <input type="hidden" name="id" value="<%= user.id %>">
              <input type="hidden" name="accessToken" value="<%= token %>">
              <button type="submit">Editar</button>
            </form>
          </td>
        </tr>
        <% }) %>



    </tbody>

  </table>

  </div>

  <div>
    <form action="/addproducto/?accessToken=<%= token%>" method="POST">

      <div class="mb-3 p-3">
        <label for="producto" class="form-label">Producto</label>
        <input type="text" class="form-control" id="producto" name="producto" tabindex="1" required>
      </div>
      <div class="mb-3 p-3">
        <label for="cantidad" class="form-label">Cantidad</label>
        <input type="text" class="form-control" id="cantidad" name="cantidad" tabindex="1" required>
      </div>
      <div class="mb-3 p-3">
        <label for="precio" class="form-label">Precio</label>
        <input type="text" class="form-control" id="precio" name="precio" tabindex="1" required>
      </div>
      <div class="d-flex justify-content-between">
      <div class="m-3">
        <button type="submit" class="btn btn-primary " tabindex="5">Añadir</button>
      </div>
     
    </form>
    <div class="p-3">
      <button id="recargarBtn" class=" btn btn-secondary ">Actualizar</button>
    </div>
   </div>

  </div>
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
    <script>

      document.getElementById('recargarBtn').addEventListener('click', function() {
        // Recarga la página
        location.reload();
      });
    </script>
</body>

</html>